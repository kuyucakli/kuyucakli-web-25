---
import { Picture } from "astro:assets";

const { data, id } = Astro.props;
---

<li>
  <div class="">
    <div style="mix-blend-mode: difference;">
      <h1 class="headlinesmall">
        {data.title}
      </h1>
      <p>
        {data.excerpt}
      </p>
    </div>
    {
      data.poster ? (
        <Picture
          src={data?.poster}
          alt="Pinball(Tilt) Game"
          formats={["avif", "webp"]}
          widths={[240, 540, 720, data?.poster?.width]}
          sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${data?.poster?.width}px`}
        />
      ) : null
    }
  </div>
  <a
    href={"/posts/" + data.category + "-" + id}
    class="cover-link"
    aria-label={data.title}></a>
</li>

<style>
  div {
    position: relative;
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
  div > div {
    position: relative;
    z-index: 1;
  }
</style>
